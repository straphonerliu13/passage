<% was_validated = attraction_category.errors.any? %>

<%= form_with(model: attraction_category, local: true, novalidate: true, class: "mb-3") do |f| %>
  <!-- Label and input for category_type start -->
  <div class="form-group">
    <% category_type_class = "form-control" %>
    <% category_type_was_invalid = attraction_category.errors.include?(:category_type) %>

    <% if was_validated %>
      <% if category_type_was_invalid %>
        <% category_type_class << " is-invalid" %>
      <% else %>
        <% category_type_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :category_type %>
    <!-- Input for category_type start -->
    <%= f.select :category_type, options_for_select(AttractionCategory.category_types.keys), {}, class: "form-control" %>
    <!-- Input for category_type end -->
    <% if category_type_was_invalid %>
      <% attraction_category.errors.full_messages_for(:category_type).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for category_type end -->
  <!-- Label and input for category_description start -->
  <div class="form-group">
    <% category_description_class = "form-control" %>
    <% category_description_was_invalid = attraction_category.errors.include?(:category_description) %>

    <% if was_validated %>
      <% if category_description_was_invalid %>
        <% category_description_class << " is-invalid" %>
      <% else %>
        <% category_description_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :category_description %>
    <!-- Input for category_description start -->
    <%= f.select :category_description, options_for_select(AttractionCategory.category_descriptions.keys), {}, class: "form-control" %>
    <!-- Input for category_description end -->
    <% if category_description_was_invalid %>
      <% attraction_category.errors.full_messages_for(:category_description).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for category_description end -->
  <!-- Label and input for target_demographic start -->
  <div class="form-group">
    <% target_demographic_class = "form-control" %>
    <% target_demographic_was_invalid = attraction_category.errors.include?(:target_demographic) %>

    <% if was_validated %>
      <% if target_demographic_was_invalid %>
        <% target_demographic_class << " is-invalid" %>
      <% else %>
        <% target_demographic_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :target_demographic %>
    <!-- Input for target_demographic start -->
    <%= f.text_field :target_demographic, class: target_demographic_class, placeholder: "Enter target demographic" %>
    <!-- Input for target_demographic end -->
    <% if target_demographic_was_invalid %>
      <% attraction_category.errors.full_messages_for(:target_demographic).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for target_demographic end -->
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
