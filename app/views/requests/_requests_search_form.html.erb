<%= search_form_for @q, :class => collapse_search_form, :id => "requests_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :request_name_cont, "Request name contains" %>
    <%= f.text_field :request_name_cont, :class => "form-control", :placeholder => "Request name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :requestor_id, "Requestor" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :requestor_id_gteq, :class => "form-control", :placeholder => "Requestor greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :requestor_id_lteq, :class => "form-control", :placeholder => "Requestor less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :request_description_cont, "Request description contains" %>
    <%= f.text_field :request_description_cont, :class => "form-control", :placeholder => "Request description contains" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :approver_first_name_cont, "Approver first_name contains" %>
    <%= f.text_field :approver_first_name_cont, :class => "form-control", :placeholder => "Approver first_name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :attraction_attraction_name_cont, "Attraction attraction_name contains" %>
    <%= f.text_field :attraction_attraction_name_cont, :class => "form-control", :placeholder => "Attraction attraction_name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :exhibit_exhibit_name_cont, "Exhibit exhibit_name contains" %>
    <%= f.text_field :exhibit_exhibit_name_cont, :class => "form-control", :placeholder => "Exhibit exhibit_name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :main_exhibit_exhibit_name_cont, "Main exhibit exhibit_name contains" %>
    <%= f.text_field :main_exhibit_exhibit_name_cont, :class => "form-control", :placeholder => "Main exhibit exhibit_name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :main_attraction_attraction_name_cont, "Main attraction attraction_name contains" %>
    <%= f.text_field :main_attraction_attraction_name_cont, :class => "form-control", :placeholder => "Main attraction attraction_name contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/requests" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#requests_filters">
  Show filters
</a>
