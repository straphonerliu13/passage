<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Requests

    <a data-toggle="collapse" href="#exhibit_requests_new_form">
      Add request
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @exhibit.requests.each do |request| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to request, request %>

        <%= link_to request, method: :delete, data: { confirm: "Do you really want to delete this request" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="exhibit_requests_new_form">
        <%= render partial: "exhibits/exhibit_requests_new_form" %>
      </div>
    </div>

  </ul>
</div>
