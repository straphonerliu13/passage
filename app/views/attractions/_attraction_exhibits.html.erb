<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Exhibits

    <a data-toggle="collapse" href="#attraction_exhibits_new_form">
      Add exhibit
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @attraction.exhibits.each do |exhibit| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to exhibit, exhibit %>

        <%= link_to exhibit, method: :delete, data: { confirm: "Do you really want to delete this exhibit" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="attraction_exhibits_new_form">
        <%= render partial: "attractions/attraction_exhibits_new_form" %>
      </div>
    </div>

  </ul>
</div>
