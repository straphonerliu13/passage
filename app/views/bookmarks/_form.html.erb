<% was_validated = bookmark.errors.any? %>

<%= form_with(model: bookmark, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% user_class = "form-control" %>
    <% user_was_invalid = bookmark.errors.include?(:user) %>

    <% if was_validated %>
      <% if user_was_invalid %>
        <% user_class << " is-invalid" %>
      <% else %>
        <% user_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :user_id %>
    <%= f.collection_select :user_id, User.all, :id, :to_s, {}, class: "form-control" %>
    <% if user_was_invalid %>
      <% bookmark.errors.full_messages_for(:user).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% exhibit_class = "form-control" %>
    <% exhibit_was_invalid = bookmark.errors.include?(:exhibit) %>

    <% if was_validated %>
      <% if exhibit_was_invalid %>
        <% exhibit_class << " is-invalid" %>
      <% else %>
        <% exhibit_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :exhibit_id %>
    <%= f.collection_select :exhibit_id, Exhibit.all, :id, :to_s, {}, class: "form-control" %>
    <% if exhibit_was_invalid %>
      <% bookmark.errors.full_messages_for(:exhibit).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% attraction_class = "form-control" %>
    <% attraction_was_invalid = bookmark.errors.include?(:attraction) %>

    <% if was_validated %>
      <% if attraction_was_invalid %>
        <% attraction_class << " is-invalid" %>
      <% else %>
        <% attraction_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :attraction_id %>
    <%= f.collection_select :attraction_id, Attraction.all, :id, :to_s, {}, class: "form-control" %>
    <% if attraction_was_invalid %>
      <% bookmark.errors.full_messages_for(:attraction).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
