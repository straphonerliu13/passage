<div class="card mb-3">
  <h2 class="card-header h4">
    Recording #<%= recording.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Exhibit</dt>
      <dd>
        <% if @recording.exhibit.present? %>
          <%= link_to recording.exhibit, recording.exhibit %>
        <% end %>
      </dd>

      <dt>Audio upload</dt>
      <dd>
        <%= cl_image_tag @recording.audio_upload, class: "img-fluid" %>
      </dd>

      <dt>Video upload</dt>
      <dd><%= recording.video_upload %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back recording, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_recording_url(recording), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to recording, method: :delete, data: { confirm: "Do you really want to delete this recording?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(recording.updated_at) %> ago
  </div>
</div>
