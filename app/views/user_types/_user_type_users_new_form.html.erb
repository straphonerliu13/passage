<%= form_with(model: @user, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :first_name %>

    <%= f.text_field :first_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :last_name %>

    <%= f.text_field :last_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :email_address %>

    <%= f.text_field :email_address, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password %>

    <%= f.text_field :password, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :home_city %>

    <%= f.text_field :home_city, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :home_state %>

    <%= f.text_field :home_state, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :home_country %>

    <%= f.text_field :home_country, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :user_image %>

    <%= f.file_field :user_image, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :user_bio %>
    <%= f.text_area :user_bio, rows: "3", class: "form-control" %>
  </div>

  <%= f.hidden_field :user_type_id, value: @user_type.id %>

  <div class="form-group">
    <%= f.label :demographic_id %>

    <%= f.collection_select :demographic_id, VisitorDemographic.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <%= f.submit "Create user", class: "btn btn-block btn-outline-secondary" %>
<% end %>
