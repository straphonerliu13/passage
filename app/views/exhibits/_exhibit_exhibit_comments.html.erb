<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Exhibit Comments

    <a data-toggle="collapse" href="#exhibit_exhibit_comments_new_form">
      Add exhibit comment
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @exhibit.exhibit_comments.each do |exhibit_comment| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to exhibit_comment, exhibit_comment %>

        <%= link_to exhibit_comment, method: :delete, data: { confirm: "Do you really want to delete this exhibit_comment" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="exhibit_exhibit_comments_new_form">
        <%= render partial: "exhibits/exhibit_exhibit_comments_new_form" %>
      </div>
    </div>

  </ul>
</div>
