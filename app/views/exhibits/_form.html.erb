<% was_validated = exhibit.errors.any? %>

<%= form_with(model: exhibit, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% exhibit_name_class = "form-control" %>
    <% exhibit_name_was_invalid = exhibit.errors.include?(:exhibit_name) %>

    <% if was_validated %>
      <% if exhibit_name_was_invalid %>
        <% exhibit_name_class << " is-invalid" %>
      <% else %>
        <% exhibit_name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :exhibit_name %>
    <%= f.text_field :exhibit_name, class: exhibit_name_class, placeholder: "Enter exhibit name" %>
    <% if exhibit_name_was_invalid %>
      <% exhibit.errors.full_messages_for(:exhibit_name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% attraction_class = "form-control" %>
    <% attraction_was_invalid = exhibit.errors.include?(:attraction) %>

    <% if was_validated %>
      <% if attraction_was_invalid %>
        <% attraction_class << " is-invalid" %>
      <% else %>
        <% attraction_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :attraction_id %>
    <%= f.collection_select :attraction_id, Attraction.all, :id, :to_s, {}, class: "form-control" %>
    <% if attraction_was_invalid %>
      <% exhibit.errors.full_messages_for(:attraction).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% exhibit_description_class = "form-control" %>
    <% exhibit_description_was_invalid = exhibit.errors.include?(:exhibit_description) %>

    <% if was_validated %>
      <% if exhibit_description_was_invalid %>
        <% exhibit_description_class << " is-invalid" %>
      <% else %>
        <% exhibit_description_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :exhibit_description %>
    <%= f.text_area :exhibit_description, class: exhibit_description_class, placeholder: "Enter exhibit description" %>
    <% if exhibit_description_was_invalid %>
      <% exhibit.errors.full_messages_for(:exhibit_description).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% exhibit_image_class = "form-control" %>
    <% exhibit_image_was_invalid = exhibit.errors.include?(:exhibit_image) %>

    <% if was_validated %>
      <% if exhibit_image_was_invalid %>
        <% exhibit_image_class << " is-invalid" %>
      <% else %>
        <% exhibit_image_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :exhibit_image %>
    <%= f.file_field :exhibit_image, class: "form-control" %>
    <% if exhibit_image_was_invalid %>
      <% exhibit.errors.full_messages_for(:exhibit_image).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% exhibit_location_class = "form-control" %>
    <% exhibit_location_was_invalid = exhibit.errors.include?(:exhibit_location) %>

    <% if was_validated %>
      <% if exhibit_location_was_invalid %>
        <% exhibit_location_class << " is-invalid" %>
      <% else %>
        <% exhibit_location_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :exhibit_location %>
    <%= f.text_field :exhibit_location, class: exhibit_location_class, placeholder: "Enter exhibit location" %>
    <% if exhibit_location_was_invalid %>
      <% exhibit.errors.full_messages_for(:exhibit_location).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% status_class = "form-control" %>
    <% status_was_invalid = exhibit.errors.include?(:status) %>

    <% if was_validated %>
      <% if status_was_invalid %>
        <% status_class << " is-invalid" %>
      <% else %>
        <% status_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :status_id %>
    <%= f.number_field :status_id, class: status_class, placeholder: "Enter status" %>
    <% if status_was_invalid %>
      <% exhibit.errors.full_messages_for(:status).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
