<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Attractions

    <a data-toggle="collapse" href="#attraction_category_attractions_new_form">
      Add attraction
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @attraction_category.attractions.each do |attraction| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <%= link_to attraction, attraction %>
        <!-- Show link end -->

        <!-- Delete link start -->
        <%= link_to attraction, method: :delete, data: { confirm: "Do you really want to delete this attraction" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="attraction_category_attractions_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "attraction_categories/attraction_category_attractions_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
