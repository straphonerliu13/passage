<div class="card mb-3">
  <h2 class="card-header h4">
    Exhibit #<%= exhibit.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Exhibit name</dt>
      <!-- Display exhibit_name start -->
      <dd><%= exhibit.exhibit_name %></dd>
      <!-- Display exhibit_name end -->

      <dt>Attraction</dt>
      <!-- Display attraction_id start -->
      <dd><%= exhibit.attraction_id %></dd>
      <!-- Display attraction_id end -->

      <dt>Exhibit description</dt>
      <!-- Display exhibit_description start -->
      <dd><%= exhibit.exhibit_description %></dd>
      <!-- Display exhibit_description end -->

      <dt>Exhibit image</dt>
      <!-- Display exhibit_image start -->
      <dd><%= exhibit.exhibit_image %></dd>
      <!-- Display exhibit_image end -->

      <dt>Exhibit location</dt>
      <!-- Display exhibit_location start -->
      <dd><%= exhibit.exhibit_location %></dd>
      <!-- Display exhibit_location end -->

      <dt>Status</dt>
      <!-- Display status_id start -->
      <dd><%= exhibit.status_id %></dd>
      <!-- Display status_id end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back exhibit, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link exhibit start -->
      <div class="col">
        <%= link_to edit_exhibit_url(exhibit), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link exhibit end -->

      <!-- Delete link exhibit start -->
      <div class="col">
        <%= link_to exhibit, method: :delete, data: { confirm: "Do you really want to delete this exhibit?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link exhibit end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(exhibit.updated_at) %> ago
  </div>
</div>
