<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Exhibit Comments

    <a data-toggle="collapse" href="#user_exhibit_comments_new_form">
      Add exhibit comment
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.exhibit_comments.each do |exhibit_comment| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <%= link_to exhibit_comment, exhibit_comment %>
        <!-- Show link end -->

        <!-- Delete link start -->
        <%= link_to exhibit_comment, method: :delete, data: { confirm: "Do you really want to delete this exhibit_comment" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_exhibit_comments_new_form">
        <!-- New associationcollection form start -->

        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
