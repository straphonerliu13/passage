<div class="card mb-3">
  <h2 class="card-header h4">
    Attraction Category #<%= attraction_category.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Category type</dt>
      <dd><%= attraction_category.category_type %></dd>

      <dt>Category description</dt>
      <dd><%= attraction_category.category_description %></dd>

      <dt>Target demographic</dt>
      <dd><%= attraction_category.target_demographic %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back attraction_category, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_attraction_category_url(attraction_category), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to attraction_category, method: :delete, data: { confirm: "Do you really want to delete this attraction_category?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(attraction_category.updated_at) %> ago
  </div>
</div>
